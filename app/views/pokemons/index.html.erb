<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>Pokemon</h1>
      <hr>
      <%= simple_form_for :search, url: pokemons_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
      <% @pokemons.each do |pokemon| %>
        <h3><%= pokemon.name %></h3>
      <% end %>
      <%= link_to "Home", root_path %>
    </div>
  </div>
</div>
